# Node.js/Express Server Configuration
NODE_ENV=development
PORT=3001
LOG_LEVEL=info
LOG_DIR=./logs

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# Admin Credentials (Change in production)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Microsoft 365 Configuration
MS_TENANT_ID=your-tenant-id
MS_CLIENT_ID=your-client-id
MS_CLIENT_SECRET=your-client-secret
MS_REDIRECT_URI=http://localhost:3001/api/auth/callback

# Microsoft Graph API Configuration
MS_GRAPH_ENDPOINT=https://graph.microsoft.com
MS_GRAPH_VERSION=v1.0

# PowerShell Configuration
POWERSHELL_PATH=pwsh
POWERSHELL_TIMEOUT=300000
POWERSHELL_MAX_MEMORY=1024

# Report Configuration
REPORTS_OUTPUT_DIR=./reports
REPORTS_TEMP_DIR=./temp
REPORTS_ARCHIVE_DAYS=90

# Database Configuration (if using database)
DATABASE_URL=mongodb://localhost:27017/ms365-management
DATABASE_NAME=ms365-management

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@example.com
SMTP_PASS=your-app-password

# Timezone
TIMEZONE=UTC

# Performance Settings
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=30000

# Security Settings
HELMET_CSP_ENABLED=true
CORS_CREDENTIALS=true

# Monitoring and Health Check
HEALTH_CHECK_INTERVAL=60000
ENABLE_METRICS=true

# External Services
WEBHOOK_ENABLED=false
WEBHOOK_URL=https://your-webhook-endpoint.com/webhook

# Development Settings
DEBUG_MODE=false
ENABLE_API_DOCS=true
API_DOCS_PATH=/api-docs